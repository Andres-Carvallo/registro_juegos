<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rule text</th>
      <th>Detalle</th>
      <th>Editar</th>
      <th>Imagen Producto</th>
      <th>Link reglas en PDF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rule_text %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
       
        <td><%= link_to (image_tag (rails_blob_url(game.box_image)), rails_blob_url(game.box_image), disposition: "attachment")  %></td>

        <td><%= link_to rails_blob_path(game.rules_pdf) %></td>
       
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
